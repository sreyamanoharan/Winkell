<%- include ('../admin/layouts/header.ejs') -%>

<div  style="display:flex; align-items: center;justify-content: center;">
	

<div style="width: 50rem;height: 60rem;">
	<!-- <a href="/admin/userManage"><button class="btn btn-primary btn-block mb-4">Add Product</button></a>  -->
<h3  class="text-center">User List</h3>
<table class="table">
    <thead>
      <tr>
        <th scope="col">No.</th>
        <th scope="col">name</th>
        <th scope="col">email</th>
        <th scope="col">mobile</th>
		<th scope="col">password</th>

      </tr>
    </thead>
    <tbody>
		<% user.forEach((content,i) => {%>
			
		
      <tr>
        <td scope="row"><%=i+1 %></td>
        <td scope="row"><%=content.name%></td>
		    <td scope="row"><%=content.email %></td>
		    <td scope="row"><%=content.mobile %></td>
		    <td scope="row"><%=content.password%></td>
		

		 <td scope="row"> 
      <% if(content.status==true){ %>
			<a href="/admin//blockUser?id=<%=content._id%>"><button type="submit" class="btn btn-secondary btn-block mb-4">Unblock</button></a> 
		<% }else{ %>
      <a href="/admin//blockUser?id=<%=content._id%>"><button type="submit" class="btn btn-danger btn-block mb-4">Block</button></a> 
      <% } %>

    </tr>
	
	<%}); %>
    </tbody>
  </table>
  </div>
  </div>



  <%- include ('../admin/layouts/footer.ejs') -%>







